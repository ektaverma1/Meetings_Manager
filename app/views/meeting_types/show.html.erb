<%= form_tag(add_attendees_meeting_type_path(@meeting_type.id),:method=>'post') do %>
  <p id="notice"><%= notice %></p>
  <p>
    <b>Name:</b>
    <%= @meeting_type.name %>
  </p>
  <p>
    <b>Add Attendee(s):</b>
    <%=select_tag('attendee_ids',options_for_select(@attendee),{:multiple=>true}) %>
  </p>
  <p>
    <%= submit_tag "Add Attendee" %>
  </p>
  <p>
    <b>Number of Attendee(s) :</b>
    <%= link_to @meeting_type.attendees.count , {:controller => "meeting_types",:action => "num_of_attendees",:meeting_type_id =>@meeting_type.id} %>
  </p>
  <%= link_to 'Edit', edit_meeting_type_path(@meeting_type) %> |
  <%= link_to 'Back', meeting_types_path %>
<%end%>